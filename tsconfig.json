{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "types": ["node"],
    "sourceMap": true,

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
